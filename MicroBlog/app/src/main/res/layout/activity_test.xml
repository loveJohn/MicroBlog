<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.MainActivity" >

    <Button
        android:id="@+id/t_bt_auth_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="客户端授权测试" />

    <Button
        android:id="@+id/t_bt_auth_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络授权测试" />

    <Button
        android:id="@+id/t_bt_auth_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="all授权测试" />

    <EditText
        android:id="@+id/t_et_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="测试的接口完整URL" />

    <Button
        android:id="@+id/t_bt_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试接口" />

    <TextView
        android:id="@+id/t_tv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示JSON" />

</LinearLayout>