<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.loveextra.microblog.Activity.MicroBlogActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_microblog_navigation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_navigation_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/btn_microblog_navigation_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/me"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />


        <ImageButton
            android:id="@+id/btn_microblog_navigation_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_navigation_menu"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/french_grey"/>




    <com.cjj.MaterialRefreshLayout
        android:id="@+id/material_refresh_microblog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">



        <ListView
            android:id="@+id/list_status_microblog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.cjj.MaterialRefreshLayout>




</LinearLayout>
