<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.loveextra.microblog.Activity.PublishIdeaActivity">

    <RelativeLayout
        android:id="@+id/navigation_publish_idea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/btn_publish_idea_navigation_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/cancel"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_publish_idea_navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/publish_idea"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btn_publish_idea_navigation_send"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:text="@string/send"
            android:enabled="false"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>

    <View
        android:id="@+id/cut1_view_publish_idea_"
        android:layout_below="@id/navigation_publish_idea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/french_grey"/>


    <LinearLayout
        android:id="@+id/ll_edit_publish_idea"
        android:layout_below="@id/cut1_view_publish_idea_"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_publish_idea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:hint="@string/share_fresh"
            android:background="@color/white"/>


        <ImageView
            android:id="@+id/display_publish_idea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:src="@mipmap/welcome_android_slogan"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:id="@+id/btn_publish_idea_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_delete"
            android:visibility="gone"/>


    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_publish_idea_tool_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_publish_idea_tool_navigation_image"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_publish_idea_tool_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_publish_idea_tool_navigation_at"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_publish_idea_tool_trend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_publish_idea_tool_navigation_trend"/>

        </RelativeLayout>


        <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal|center_vertical"
           android:layout_weight="1">

           <ImageButton
               android:id="@+id/btn_publish_idea_tool_emotion"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/btn_publish_idea_tool_navigation_emotion"/>

       </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_publish_idea_tool_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_publish_idea_tool_navigation_more"/>

        </RelativeLayout>



    </LinearLayout>




</RelativeLayout>
