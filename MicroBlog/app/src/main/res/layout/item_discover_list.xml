<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="4"
        android:rowCount="2">

        <ImageView
            android:id="@+id/content_image_essay_discover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:src="@mipmap/logo_profile_me"/>

        <TextView
            android:id="@+id/title_essay_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_columnSpan="2"
            android:textSize="18sp"
            android:layout_column="1"
            android:layout_row="0"
            android:maxEms="11"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="昵称"
            />



        <TextView
            android:id="@+id/type_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:layout_column="3"
            android:layout_row="0"
            android:textSize="12sp"
            android:text="类型"
            />

        <TextView
            android:id="@+id/gongzhonghao_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:gravity="start"
            android:layout_column="1"
            android:layout_row="1"
            android:text="cocent科技"
            />

        <TextView
            android:id="@+id/time_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:gravity="start"
            android:layout_column="2"
            android:layout_row="1"
            android:text="7-5  10:24"
            />
    </GridLayout>



</LinearLayout>