<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/french_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/grey">

        <EditText
            android:id="@+id/edit_discover_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:hint="@string/search_linkman_group"
            android:drawableLeft="@mipmap/letter_search_icon"
            android:textSize="12sp"
            android:background="@drawable/shape_edit"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/btn_discover_search_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:saveEnabled="false"
            android:background="@drawable/btn_discover_navigation_voice_search"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view_discover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">



    </ListView>







</LinearLayout>