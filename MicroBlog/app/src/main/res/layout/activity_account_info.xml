<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loveextra.microblog.Activity.AccountInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_account_info_navigation_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_navigation_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/btn_account_info_navigation_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/me"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />



    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:columnCount="2"
            android:rowCount="6">

            <TextView
                android:id="@+id/account_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="20sp"
                android:text="@string/user_name"/>

            <ImageView
                android:id="@+id/account_info_portrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:src="@mipmap/logo_account_security_tip_icon"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                />


            <TextView
                android:id="@+id/account_info_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="18sp"
                android:text="用户ID:213432" />


            <TextView
                android:id="@+id/account_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="18sp"
                android:text="性别：男"
                />

            <TextView
                android:id="@+id/account_info_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_column="0"
                android:layout_row="3"
                android:textSize="18sp"
                android:text="所在地：上海"
                />

            <TextView
                android:id="@+id/account_info_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="20dp"
                android:layout_column="0"
                android:layout_row="4"
                android:textSize="18sp"
                android:text="个性签名：聚是一团火，散作满天星。"
                />

        </GridLayout>




    </LinearLayout>

    <Button
        android:id="@+id/btn_unload_account_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_btn_other"
        android:text="@string/unload"/>



</RelativeLayout>
